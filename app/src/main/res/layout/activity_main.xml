<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.admin.openwpsdemo.ui.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开PDF文件"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_wps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开wps页面"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开txt页面"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打印文件名称"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_sdk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="判断是否含有外置sd卡"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_timeLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间轴&#160;&#160;页面"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_pie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饼状图"
                android:textSize="16sp" />


            <Button
                android:id="@+id/bt_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试recycleView"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_upBugs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开上传错误日志页面"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开高德地图定位"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展示页面"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_gson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gson解析过滤null"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_threadLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ThraeadLocal的用法"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_concurrence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="并发"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_thread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多线程"
                android:textSize="16sp" />


        </LinearLayout>


        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfview"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </LinearLayout>
</ScrollView>